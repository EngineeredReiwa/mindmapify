{
  "name": "mindmapify",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:3000": "PORT=3000 vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test:suite": "node test-suite.js",
    "test:quick": "node test-suite.js --quick --headless",
    "test:debug": "node test-suite.js --debug",
    "test:full": "node test-suite.js --full --headless",
    "test:specific": "node test-suite.js --specific",
    "test:workflows": "node test-suite.js --specific=workflows --debug",
    "test:help": "node test-suite.js --help",
    "test:e2e": "npm run dev & sleep 3 && npm run test:full && pkill -f vite",
    "test:dev": "npm run dev & sleep 3 && npm run test:debug; pkill -f vite"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "konva": "^9.3.22",
    "mermaid": "^11.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-konva": "^19.0.7",
    "react-konva-utils": "^1.1.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "puppeteer": "^24.14.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "uuid": "^11.1.0",
    "vite": "^7.0.4"
  }
}
